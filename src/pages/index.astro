---
import BaseLayout from "../layouts/BaseLayout.astro";

const lanyard_url = "https://api.lanyard.rest/v1/users/540898474288480256";

const response = await fetch(lanyard_url).then((response) => response.json());
const offline = response.data.discord_status === "offline";
---

<BaseLayout>
	<main>
		<section class="flex flex-row justify-between pt-8">
			<div id="hero-text" class="mr-8">
				<div class="flex flex-row gap-4 items-center">
					<h1 class="text-6xl font-bold">
						Hi, I&apos;m&nbsp;<span class="hero-text">Trobo</span>
					</h1>
				</div>
				<p class="ml-1 text-xl text-gray-200 mb-4">
					Tech Enthusiast and Developer from Germany
				</p>
				<p class="ml-1 text-xl max-w-lg lg:max-w-2xl">
					I am a passionate developer specializing in front-end web
					development and creation of automation scripts with Python.
					You can see some of my work below.
				</p>
				<div class="flex flex-row items-center gap-4 ml-1 mt-8">
					<a
						href="#projects"
						class="px-6 py-2 text-lg hover:text-gray-50 border border-accent-200 bg-accent-200 hover:bg-accent-300 rounded-xl transition-colors duration-300"
					>
						View Work
					</a>
					<a
						href="/about"
						class="px-6 py-2 text-lg hover:text-gray-50 border border-accent-200 rounded-xl hover:bg-accent-300 transition-colors duration-300"
					>
						More About Me
					</a>
				</div>
			</div>
			<div class="md:flex flex-col hidden">
				<div class="relative inline-block">
					<img
						src="../../images/profile_picture.jpg"
						alt="Trobonox Profile Picture"
						class="rounded-full w-48 h-48 object-cover"
					/>
					{
						!offline ? (
							<span class="w-8 h-8 rounded-full bg-emerald-500 border-2 border-emerald-600 absolute right-4 bottom-0.5" />
						) : (
							<span class="w-8 h-8 rounded-full bg-gray-500 border-2 border-gray-600 absolute right-4 bottom-0.5" />
						)
					}
				</div>
				<div
					class="mt-8 py-2 px-8 bg-gray-700 rounded-md text-center self-center w-fit"
				>
					Status: <span class="font-bold"
						>{response.data.discord_status}</span
					>
				</div>
			</div>
		</section>
	</main>
</BaseLayout>

<style>
	.hero-text {
		background-image: url("../../images/gradient.gif");
		background-position: 46% 48%;
		webkit-background-clip: text;
		background-clip: text;
		-webkit-text-fill-color: transparent;
	}
</style>
