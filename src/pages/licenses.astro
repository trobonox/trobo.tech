---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
    <section id="introduction" class="flex flex-col gap-4 mb-8">
        <h1 class="md:text-5xl text-4xl font-bold">Licenses and Credits</h1>

        <p class="font-medium text-gray-200">
            This website takes advantage of external packages using open-source
            licenses, and I would like to give attribution to them.
        </p>
    </section>
    <section id="libraries" class="flex flex-col gap-4 mb-8">
        <h2 class="text-2xl tracking-wide">License Notices</h2>
        <div class="grid gap-4 md:grid-cols-2">
            <div
                class="flex flex-col justify-between gap-4 rounded-xl border-2 border-gray-700"
            >
                <div class="flex flex-col gap-1 p-4">
                    <h4 class="text-lg font-semibold">Astro</h4>
                    <p>© 2021 Fred K. Schott</p>
                    <p>Licensed under the MIT license.</p>
                </div>
            </div>
            <div
                class="flex flex-col justify-between gap-4 rounded-xl border-2 border-gray-700"
            >
                <div class="flex flex-col gap-1 p-4">
                    <h4 class="text-lg font-semibold">Vue</h4>
                    <p>© 2013-present Yuxi (Evan) You</p>
                    <p>Licensed under the MIT license.</p>
                </div>
            </div>
            <div
                class="flex flex-col justify-between gap-4 rounded-xl border-2 border-gray-700"
            >
                <div class="flex flex-col gap-1 p-4">
                    <h4 class="text-lg font-semibold">Tailwind CSS</h4>
                    <p>© Tailwind Labs, Inc.</p>
                    <p>Licensed under the MIT license.</p>
                </div>
            </div>
        </div>
    </section>
    <section id="artwork" class="flex flex-col gap-4">
        <h2 class="my-auto w-fit text-4xl font-semibold">Artwork Credits</h2>
        <div class="grid gap-4 md:grid-cols-2">
            <div
                class="flex flex-col justify-between gap-4 rounded-xl border-2 border-gray-700"
            >
                <div class="flex flex-col gap-1 p-4">
                    <h4 class="text-lg font-semibold">
                        Profile picture (hero image)
                    </h4>
                    <p>Credits to Archillect on Twitter:</p>
                    <a
                        href="https://twitter.com/archillect/status/769935081796427776"
                        >https://twitter.com/archillect/status/769935081796427776</a
                    >
                </div>
            </div>
            <div
                class="flex flex-col justify-between gap-4 rounded-xl border-2 border-gray-700"
            >
                <div class="flex flex-col gap-1 p-4">
                    <h4 class="text-lg font-semibold">
                        Hero text animation (blue gradient)
                    </h4>
                    <p>Credits to edisonpalacios98 on Pexels</p>
                    <a
                        href="https://pixabay.com/videos/gradient-motion-motion-graphics-109908/"
                        >https://pixabay.com/videos/gradient-motion-motion-graphics-109908/</a
                    >
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
